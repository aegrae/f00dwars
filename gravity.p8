function change_gravity()
	if btnp(0) then gravity=0 end
	if btnp(1) then gravity=1 end
	if btnp(2) then gravity=2 end
	if btnp(3) then gravity=3 end
	if btnp(0) or
	   btnp(1) or
	   btnp(2) or
	   btnp(3) then
	 vel = 0
	end
end

function apply_gravity()
	vel = vel + g
 if gravity == 0 then
  x = x + vel
 end
 if gravity == 1 then
  x = x - vel
 end
 if gravity == 2 then
  y = y + vel
 end
 if gravity == 3 then
  y = y - vel
 end
end
